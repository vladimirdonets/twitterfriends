<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %logger{5} %cyan([%thread]) %highlight(%-5level) - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.samplecode" level="TRACE"/>


    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>